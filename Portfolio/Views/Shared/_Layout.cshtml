<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WH0J7H8TVQ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-WH0J7H8TVQ');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon"/>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <style rel="stylesheet" type="text/css">
        #logo{
            width:50px;
            border-radius:50%;
        }             

        .navs:hover{
            box-shadow: 0 0 20px rgba(0,0,0,0.5)
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img id="logo" src="~/images/me.jpg" alt="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <a class="navs nav-link active text-white" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                    <a class="navs nav-link text-white" asp-controller="Projects" asp-action="Index">Projects</a>
                    <a class="navs nav-link text-white" asp-controller="Projects" asp-action="InDevelopment">In-Development</a>
                    @{
                        if(ViewData["LoginStatus"] != null)
                        {
                            string? status = (string?) ViewData["LoginStatus"];

                            if(status != null && status == "yes")
                            {
                                <a class="navs nav-link text-white" asp-controller="Projects" asp-action="AddProject">Add Project</a>
                            }
                            else
                            {                                
                                ViewData["LoginStatus"] = null;
                            }
                        }                        
                    }                    
                    <a class="navs nav-link text-white" asp-controller="Home" asp-action="About">About</a>
                </div>
                <div class="navbar-collapse collapse">                   
                    @{
                        if(ViewData["LoginStatus"] != null)
                        {
                            string? status = (string?) ViewData["LoginStatus"];

                            if(status != null && status == "yes")
                            {
                                <a class="navs nav-link text-white" asp-controller="Authentication" asp-action="Logout">Logout</a>
                            }
                            else
                            {
                                <a class="navs nav-link text-white" asp-controller="Authentication" asp-action="Login">Login</a>
                                ViewData["LoginStatus"] = null;
                            }
                        }
                        else
                        {
                            <a class="navs nav-link text-white" asp-controller="Authentication" asp-action="Login">Login</a>
                        }
                    }                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">           
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-white">
            &copy; 2023 - Pheello Mokoena
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
