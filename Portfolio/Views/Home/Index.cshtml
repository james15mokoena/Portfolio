@model IList<Portfolio.Models.Project>

@{
    ViewData["Title"] = "Home";
}

<style rel="stylesheet" type="text/css">

    body{
        background-color: lightgray;        
    }

    .categories{
        margin-right:20px;
        font-size: 20px;
        text-decoration: none;
        color:black;       
    }

    .categories:hover{        
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        border-radius: 10px;
    }

    .anchors{
        text-decoration: none;
        font-size: 22px;
    }

    .proj:hover{
        box-shadow:30px 0 10px rgba(0,0,0,0.5);
    }

</style>

<div class="container">    

    <div class="container-fluid text-center">

        <ul class="list-unstyled" style="display:inline-flex">
            <li class="categories"><a class="anchors text-black" asp-action="AppType" asp-route-type="web">Web App Projects</a></li>
            <li class="categories"><a class="anchors text-black" asp-action="AppType" asp-route-type="desktop">Desktop App Projects</a></li>
            <li class="categories"><a class="anchors text-black" asp-action="AppType" asp-route-type="mobile">Mobile App Projects</a></li>
        </ul>

    </div>

    <div class="container text-center">

        <h1 id="main-heading" class="display-5 mt-3"> Recent Projects</h1>

        <div class="container text-center mt-5">
           
            <div class="row row-cols-4">
                @{
                    foreach(Project project in Model)
                    {
                        if(project != null)
                        {
                            <div class="proj col-12 col-md-3 mb-3">
                                <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id"><img src="~/@project.ImageUrl" alt="@project.Name" width="233" height="260"/></a>
                            </div>
                        }
                    }
                }
            </div>

        </div>

    </div>

</div>
